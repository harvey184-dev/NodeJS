                let motuser = response.data[i];
                console.log(motuser);
                str += `<div class="user-info">
                    <p> User: ` + motuser.username + `<br> Pass:` + motuser.password + `</p>
                    <a href="/chitietuser/`+ motuser.idUser + `">Chi tiáº¿t user</a>
                </div>`;
            }//for    
            document.getElementById("listuser").innerHTML += str;
        })
        .catch(function (error) {
            console.log(error);
        });
</script>
