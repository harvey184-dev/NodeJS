<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<table class="table table-bordered w-75 m-auto">
        <tr>
        <th>id Sản phẩm</th>
        <th>Tên sách</th>
        <th>Mô tả</th>
        <th>Hình</th>
        <th>Ngày</th>
        <th>Giá</th>
        <th>id Loại</th>
        <th>Ẩn hiển</th>
    </tr>
        <% for (let c of list ) {  %>
            <tr>
            <td>
                <%= c.id %>
            </td>
            <td>
                <%= c.tenSach %>
            </td>
            <td>
                <%= c.moTa %>
            </td>
            <td>
                <img src="/<%= c.urlHinh %>" alt="" style="height: 200px;">
            </td>
            <td>
                <%= c.capNhat %>
            </td>
            <td>
                <%= c.gia %>
            </td>
            <td>
                <%= c.idLoai %>
            </td>
            <td>
                <%= c.anHien==1 ? "Đang hiện" : "Đang ẩn" %>
            </td>
        </tr>
            <% } %>
</table>