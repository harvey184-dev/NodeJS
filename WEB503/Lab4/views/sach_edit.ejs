<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<form class="col-6 border border-primary p-3 m-auto" action="/sach/update" method="POST">
    <div class="mb-3">
        Tên sách <input class="form-control border-primary" value="<%= sach.tenSach %>" name="tensach" id="tensach">
    </div>
    <div class="mb-3">
        Mô tả <input class="form-control border-primary" value="<%= sach.moTa %>" name="mota" id="mota">
    </div>
    <div class="mb-3">
        Đường dẫn ảnh <input class="form-control border-primary" value="<%= sach.urlHinh %>" name="anh" id="anh">
    </div>


    <div class="mb-3">
        Giá <input class="form-control border-primary" value="<%= sach.gia %>" name="gia" id="gia">
    </div>
    <div class="mb-3"> Ẩn hiển
        <input type="radio" name="anHien" value="1" value="<%= (sach.anHien==1)? 'checked':'' %>"> Hiện &nbsp; &nbsp;
        <input type="radio" name="anHien" value="2" value="<%= (sach.anHien==1)? 'checked':'' %>"> Ẩn
    </div>

    <div class="mt-3">  
        <button type="submit" class="btn btn-warning p-4 py-2">LƯU DATABASE</button>
    </div>
</form>