<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<form class="col-6 border border-primary p-3 m-auto" action="/loai/update" method="POST">
    <div class="mb-3">
        Tên loại <input class="form-control border-primary" value="<%= loai.tenLoai %>" name="tenLoai" id="tenLoai">
    </div>
    <div class="mb-3">
        Thứ tự <input class="form-control border-primary" value="<%= loai.thuTu %>" name="thuTu" id="thuTu">
    </div>
    <div class="mb-3"> Ẩn hiện
        <input type="radio" name="anHien" value="1" value="<%= (loai.anHien==1)? 'checked':'' %>"> Hiện &nbsp; &nbsp;
        <input type="radio" name="anHien" value="0" value="<%= (loai.anHien==0)? 'checked':'' %>"> Ẩn
    </div>
    <div class="mt-3">  
        <button type="submit" class="btn btn-warning p-4 py-2">LƯU DATABASE</button>
    </div>
    <input type="hidden" name="id" value="<%=loai.id%>">
</form>