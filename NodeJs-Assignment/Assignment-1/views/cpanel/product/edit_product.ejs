<h3 style="text-align: center;">Cập nhật sản phẩm</h3>
<div class="col-md-6">
    <form action="#" Method="POST" enctype="multipart/form-data">
        <div class="form -group"> <label for="email">Tên sản phẩm</label>
            <input type="text" value="<%= sanpham.title_product %>" name="title_product" class="form-control">
        </div>
        <div class="form-group">
            <label for="email">Hình ảnh sản phẩm</label> <input type="file" name="image_product" class="form-control">
            <p><img src="/uploads/product/<%= sanpham.image_product %>" Height="100" width="100"></p>
        </div>
        <div class="form-group "> <label for="email">Giá sản phẩm</label>
            <input type="text" value="<%= sanpham.price_product.toLocaleString('vi') %>" name="price_product"
                class="form-control">
        </div>
        <div class="form-group"> <label for="email">Số lượng sản phẩm</label>
            <input type="text" value="<%= sanpham.quantity_product %>" name="quantity_product" class="form-control">
        </div>
        <div class="form-group"> <label for="pwd">Miêu tả sản phẩm</label>
            <textarea id="editor" name="desc_product" row="5" style="resize: none"
                class="form-control"><%= sanpham.desc_product %></textarea>
        </div>
        <div class="form-group"> <label for="pwd">Danh mục sản phẩm</label>
            <select class="form-control" name="category_product">
                <% for (let dm of category) { %>
                    <option value="<%= dm.id_category_product %>">
                        <%= dm.title_category_product %>
                    </option>
                    <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="pwd">Sản phẩm hot</label>
            <select class="form-control" name="product_hot">
                <% if(sanpham.product_hot==0){ %>
                    <option selected value="0">Không</option>
                    <option value="1">Có</option>
                    <% }else{ %>
                        <option value="0">Không</option>
                        <option selected value="1">Có</option>
                        <% } %>

            </select>
        </div>
        <button type="submit" class="btn btn-default">Cập nhật sản phẩm</button>
    </form>
</div>